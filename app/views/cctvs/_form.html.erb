
<%= simple_form_for(@cctv) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">


    <%= f.input :category %>
    <%= f.collection_select :product_id, Product.all, :id, :name, {include_blank: "Select Category", label: false},{:class=>'form-control', :autofocus => true} %>
    <%= f.input :price %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
